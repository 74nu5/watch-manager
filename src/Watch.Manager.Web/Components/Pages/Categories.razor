        margin: 0 0 16px 0;
        color: var(--accent-foreground-rest);
    }

    .suggestions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 16px;
    }

    .suggestion-card {
        border: 1px solid var(--neutral-stroke-rest);
        border-radius: 8px;
        padding: 16px;
        background: var(--neutral-layer-1);
    }

    .suggestion-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 8px;
    }

    .suggestion-description {
        font-size: 0.9em;
        color: var(--neutral-foreground-rest);
        margin: 0 0 12px 0;
        line-height: 1.4;
    }

    .suggestion-keywords {
        display: flex;
        flex-wrap: wrap;
        gap: 6px;
        margin-bottom: 12px;
    }

    .suggestion-actions {
        display: flex;
        justify-content: flex-end;
        gap: 8px;
    }

