    }

    .result-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 8px 0;
        border-bottom: 1px solid var(--neutral-stroke-divider-rest);
    }

    .result-item:last-child {
        border-bottom: none;
    }

    .result-article {
        font-weight: 500;
    }

    .result-categories {
        display: flex;
