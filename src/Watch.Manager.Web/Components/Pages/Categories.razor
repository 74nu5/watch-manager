        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        margin-bottom: 20px;
    }

    .action-group {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .action-description {
