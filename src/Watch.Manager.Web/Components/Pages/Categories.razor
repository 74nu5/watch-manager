@page "/categories"

<h3>📁 Gestion des Catégories</h3>

<div class="categories-container">
    <!-- Section Classification Automatique -->
    <FluentCard Class="classification-panel">
        <div class="panel-header">
            <h4>🤖 Classification Automatique par IA</h4>
            <FluentBadge Appearance="Appearance.Accent">Nouveau</FluentBadge>
        </div>

        <div class="classification-actions">
            <div class="action-group">
                <FluentButton Appearance="Appearance.Accent"
                            @onclick="this.SuggestNewCategoriesAsync"
                            Loading="this.suggestingCategories">
                    ✨ Suggérer de nouvelles catégories
                </FluentButton>
                <p class="action-description">Analyse les articles non catégorisés pour suggérer de nouvelles catégories</p>
            </div>

            <div class="action-group">
                <FluentButton Appearance="Appearance.Outline"
                            @onclick="this.ShowBatchClassificationDialogAsync"
                            Loading="false">
                    📊 Classification en lot
                </FluentButton>
                <p class="action-description">Classifie automatiquement plusieurs articles à la fois</p>
            </div>
        </div>

        @if (this.newCategorySuggestions.Length > 0)
        {
            <div class="suggestions-section">
                <h5>💡 Nouvelles catégories suggérées</h5>
                <div class="suggestions-grid">
                    @foreach (var suggestion in this.newCategorySuggestions)
                    {
                        <div class="suggestion-card">
                            <div class="suggestion-header">
                                <strong>@suggestion.Name</strong>
                                <FluentBadge Appearance="Appearance.Neutral">
                                    @($"{suggestion.ConfidenceScore:P0}")
                                </FluentBadge>
                            </div>

                            @if (!string.IsNullOrEmpty(suggestion.Description))
                            {
                                <p class="suggestion-description">@suggestion.Description</p>
                            }

                            @if (suggestion.Keywords.Any())
                            {
                                <div class="suggestion-keywords">
                                    @foreach (var keyword in suggestion.Keywords)
                                    {
                                        <FluentBadge Appearance="Appearance.Lightweight">@keyword</FluentBadge>
                                    }
                                </div>
                            }

                            <div class="suggestion-actions">
                                <FluentButton Size="ButtonSize.Small"
                                            Appearance="Appearance.Accent"
                                            @onclick="() => this.CreateCategoryFromSuggestionAsync(suggestion)">
                                    ➕ Créer
                                </FluentButton>
                                <FluentButton Size="ButtonSize.Small"
                                            Appearance="Appearance.Stealth"
                                            @onclick="() => this.DismissSuggestion(suggestion)">
                                    ❌ Ignorer
                                </FluentButton>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </FluentCard>

    <div class="categories-header">
        <FluentButton Appearance="Appearance.Accent" @onclick="this.ShowCreateDialog">
            ➕ Nouvelle Catégorie
        </FluentButton>
        <FluentSwitch @bind-Value="this.showInactive" @bind-Value:after="this.OnShowInactiveChangedAsync" Label="Afficher les catégories inactives" />
    </div>

    @if (this.loading)
    {
        <div class="loading-container">
            <FluentProgressRing />
            <p>Chargement des catégories...</p>
        </div>
    }
    else if (this.categories.Length == 0)
    {
        <FluentCard>
            <div class="empty-state">
                <p style="font-size: 3em;">📁</p>
                <h4>Aucune catégorie</h4>
                <p>Commencez par créer votre première catégorie pour organiser vos articles.</p>
                <FluentButton Appearance="Appearance.Accent" @onclick="this.ShowCreateDialog">
                    Créer une catégorie
                </FluentButton>
            </div>
        </FluentCard>
    }
    else
    {
        <CategoryViewSelector Categories="@this.hierarchicalCategories"
                            OnCategoryEdit="@this.EditCategory"
                            OnCategoryDelete="@this.DeleteCategory"
                            OnAddCategory="@this.ShowCreateDialog"
                            InitialView="@CategoryViewType.Grid" />
    }
</div>

<!-- Dialog pour créer/éditer une catégorie -->
<FluentDialog @bind-Hidden="this.hideDialog" Modal="true" TrapFocus="true" CloseOnOverlayClick="false">
    <FluentDialogHeader>
        <FluentLabel Typo="Typography.H4">
            @(this.editingCategory == null ? "Nouvelle Catégorie" : "Modifier la Catégorie")
        </FluentLabel>
    </FluentDialogHeader>

    <FluentDialogBody>
        <EditForm Model="this.categoryForm" OnValidSubmit="this.SaveCategoryAsync">
            <DataAnnotationsValidator />

            <div class="form-group">
                <FluentTextField @bind-Value="this.categoryForm.Name"
                               Label="Nom *"
                               Required="true"
                               Placeholder="Nom de la catégorie" />
                <ValidationMessage For="@(() => this.categoryForm.Name)" />
            </div>

            <div class="form-group">
                <FluentTextArea @bind-Value="this.categoryForm.Description"
                              Label="Description"
                              Placeholder="Description de la catégorie"
                              Rows="3" />
            </div>

            <div class="form-group">
                <FluentTextField @bind-Value="this.categoryForm.Color"
                               Label="Couleur (hex)"
                               Placeholder="#3498db" />
            </div>

            <div class="form-group">
                <FluentTextField @bind-Value="this.categoryForm.Icon"
                               Label="Icône"
                               Placeholder="folder" />
            </div>

            <div class="form-group">
                <FluentTextField @bind-Value="this.keywordsText"
                               Label="Mots-clés (séparés par des virgules)"
                               Placeholder="react, javascript, frontend" />
            </div>

            <div class="form-group">
                <FluentSelect TOption="string" @bind-Value="this.SelectedParentString"
                            Label="Catégorie parente"
                            Placeholder="Sélectionner une catégorie parente">
                    <FluentOption TOption="string" Value="">Aucune (catégorie racine)</FluentOption>
                    @foreach (var cat in this.GetAvailableParentCategories())
                    {
                        <FluentOption TOption="string" Value="@cat.Id.ToString()">@cat.Name</FluentOption>
                    }
                </FluentSelect>
            </div>

            <div class="form-group">
                <FluentNumberField @bind-Value="this.categoryForm.ConfidenceThreshold"
                                 Label="Seuil de confiance (0.0 - 1.0)"
                                 Min="0"
                                 Max="1"
                                 Step="0.1" />
            </div>

            <div class="dialog-actions">
                <FluentButton @onclick="this.HideDialog" Appearance="Appearance.Neutral">
                    Annuler
                </FluentButton>
                <FluentButton Type="ButtonType.Submit"
                            Appearance="Appearance.Accent"
                            Loading="this.saving">
                    @(this.editingCategory == null ? "Créer" : "Modifier")
                </FluentButton>
            </div>
        </EditForm>
    </FluentDialogBody>
</FluentDialog>

<!-- Dialog de confirmation de suppression -->
<FluentDialog @bind-Hidden="this.hideDeleteDialog" Modal="true" TrapFocus="true">
    <FluentDialogHeader>
        <FluentLabel Typo="Typography.H4">Confirmer la suppression</FluentLabel>
    </FluentDialogHeader>

    <FluentDialogBody>
        <p>Êtes-vous sûr de vouloir supprimer la catégorie "<strong>@(this.categoryToDelete?.Name)</strong>" ?</p>
        <p class="warning-text">Cette action est irréversible et supprimera également toutes les assignations d'articles à cette catégorie.</p>
    </FluentDialogBody>

    <FluentDialogFooter>
        <FluentButton @onclick="this.HideDeleteDialog" Appearance="Appearance.Neutral">
            Annuler
        </FluentButton>
        <FluentButton @onclick="this.ConfirmDeleteAsync"
                    Appearance="Appearance.Accent"
                    Loading="this.deleting">
            Supprimer
        </FluentButton>
    </FluentDialogFooter>
</FluentDialog>

@* Dialogue de classification par lot *@
<FluentDialog @bind-Hidden="this.hideBatchDialog" Modal="true" TrapFocus="true">
    <FluentDialogHeader>
        <h4>Résultats de la classification par lot</h4>
    </FluentDialogHeader>

    <FluentDialogBody>
        @if (this.batchClassifying)
        {
            <div class="loading-container">
                <FluentProgressRing />
                <p>Classification en cours...</p>
            </div>
        }
        else if (this.batchResults.Any())
        {
            <div class="batch-classification-content">
                <p>@(this.batchResults.Length) articles classifiés automatiquement :</p>

                <div class="classification-results">
                    @foreach (var result in this.batchResults)
                    {
                        <div class="result-item">
                            <div class="result-article">@result.ArticleTitle</div>
                            <div class="result-categories">
                                @foreach (var category in result.AssignedCategories)
                                {
                                    <FluentBadge Appearance="Appearance.Accent">
                                        @category.CategoryName (@($"{category.ConfidenceScore:P0}"))
                                    </FluentBadge>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <p>Aucun article à classifier trouvé.</p>
        }
    </FluentDialogBody>

    <FluentDialogFooter>
        <FluentButton @onclick="this.HideBatchDialog">Fermer</FluentButton>
    </FluentDialogFooter>
</FluentDialog>

<style>
